            </staff>
            <staff xml:id="plicaeB" n="3">
              <layer n="1">
                <mensur modusminor="3" tempus="3" prolatio="3"/>
                <annot label="fn">Dans une ligature, la plique devrait se traduire par une hampe à droite.</annot>
                <ligature form="recta">
                  <note stem.visible="true" stem.pos="left" stem.dir="up" dur="semibrevis" oct="3" pname="g">
                    <verse n="1" lineid="5">
                      <syl wordpos="i" con="u">Se Se</syl>
                    </verse>
