          <section>
            <staff xml:id="maximaeB" n="1">
              <layer n="1">
                <mensur modusminor="3" tempus="3" prolatio="3"/>
                <annot label="fn">Il devrait y avoir une hampe à G.</annot>
                <ligature form="recta">
                  <note stem.visible="true" stem.pos="left" stem.dir="down" dur="maxima" oct="3" pname="g" color="red" colored="true">
                    <verse n="1" lineid="0">
                      <syl wordpos="i" con="u">Ma Lo</syl>
                    </verse>
                    <verse n="2" place="above" color="#000000ff">
                      <syl>1</syl>
                    </verse>
                  </note>
                  <note dur="longa" oct="3" pname="f"/>
                </ligature>
                <annot label="fn">Dans une ligature, une maxima ne devrait, par défaut, pas avoir de hampe.</annot>
                <ligature form="recta">
                  <note dur="maxima" oct="4" pname="d" color="red" colored="true">
                    <verse n="1" lineid="1">
                      <syl wordpos="i" con="u">Ma Lo</syl>
                    </verse>
                    <verse n="2" place="above" color="#000000ff">
                      <syl>2</syl>
                    </verse>
                  </note>
                  <note dur="longa" oct="4" pname="e"/>
                </ligature>
                <annot label="fn">L'encodage ne demande pas non plus de hampe.</annot>
                <ligature form="recta">
                  <note dur="maxima" oct="4" pname="d" color="red" colored="true">
                    <verse n="1" lineid="2">
                      <syl wordpos="i" con="u">Ma Lo</syl>
                    </verse>
                    <verse n="2" place="above" color="#000000ff">
                      <syl>3</syl>
                    </verse>
                  </note>
                  <note stem.visible="true" stem.pos="right" stem.dir="down" dur="longa" oct="4" pname="e"/>
                </ligature>
                <annot label="fn">La maxime ne devrait pas avoir de hampe.</annot>
                <ligature>
                  <note stem.visible="true" stem.pos="left" stem.dir="down" dur="brevis" oct="4" pname="f" lig="recta">
                    <verse n="1" lineid="3">
                      <syl wordpos="i" con="u">Bre Ma Lo</syl>
                    </verse>
                    <verse n="2" place="above">
                      <syl>4</syl>
                    </verse>
                  </note>
                  <note dur="maxima" oct="4" pname="e" color="red" colored="true" lig="recta"/>
                  <note dur="longa" oct="4" pname="d"/>
                </ligature>
                <barLine form="single" type="final"/>
              </layer>
            </staff>
            <staff xml:id="longaeB" n="2">
              <layer n="1">
                <mensur modusminor="3" tempus="3" prolatio="3"/>
                <annot label="fn">Il devrait y avoir une hampe descendante à G</annot>
                <ligature form="recta">
                  <note stem.visible="true" stem.pos="left" stem.dir="down" dur="brevis" oct="3" pname="f" color="red" colored="true">
                    <verse n="1" lineid="4">
